<div class="container">


  <div class="row">
    <div class="col-s4 offset-s2">
      {{#each burgers}}
        {{#unless devoured}}
          <span>{{burger.name}}</span>
          <button id = "{{burger.name}}" type = "button">Devour</button>
        {{/unless}}
      {{/each}}
    </div>
    
    <div class="col-s4">
      {{#each }}
        {{#if devoured}}
          <span>{{burger.name}}</span>
        {{/if}}
      {{/each}}
    </div>
    
    
  </div>

  <form action='/' method='POST'>
    <div class="row">
      <div class="col s8 offset-s2">
        <input name="newBurger" type="text">
      </div>
    </div>

    <div class="row">
      <div class="col s8 offset-s2">
        <button class="btn" type="submit">Submit</button>
      </div>
    </div>

  </form>

</div>
