<div class="container">


  <div class="row">
    <div class="col s4 offset-s2">
      {{#each burgerData}}
        {{#unless burger.devoured}}
          <div class = "right-align">
            <span>{{burger_name}}</span>
            <button id = "{{burger_name}}" class = "btn" type = "button" >Devour</button>
          </div>
          <br>
        {{/unless}}
      {{/each}}
    </div>
    
    <div class="col s4">
      {{#each burgerData}}
        {{#if devoured}}
          <span>{{burger_name}}</span>
        {{/if}}
      {{/each}}
    </div>
  </div>

  <form action='/' method='POST'>
    <div class="row">
      <div class="col s8 offset-s2">
        <input name="newBurger" type="text">
      </div>
    </div>

    <div class="row">
      <div class="col s8 offset-s2">
        <button class="btn" type="submit">Submit</button>
      </div>
    </div>

  </form>

</div>
